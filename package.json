{
  "name": "tailwind-parcel-starter",
  "version": "1.0.0",
  "description": "Front-end starter kit using the Parcel bundler",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "http-server": "^0.12.3",
    "parcel-bundler": "^1.12.4",
    "pug": "^3.0.0",
    "rucksack-css": "^1.0.2",
    "sass": "^1.29.0",
    "tailwindcss": "^2.0.3"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run clean && parcel -p 8000 src/markup/*.pug",
    "build": "npm run clean && npm run static && parcel build src/markup/*.pug --no-source-maps",
    "serve": "http-server -p 8000 dist",
    "clean": "rm -rf .cache dist",
    "static": "mkdir -p dist && cp src/static/* dist/"
  },
